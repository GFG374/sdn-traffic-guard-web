# 数据库配置
# 请根据你的MySQL安装修改以下配置

# 数据库主机地址
VITE_DB_HOST=localhost

# 数据库端口（默认3306）
VITE_DB_PORT=3306

# 数据库名称
VITE_DB_NAME=network_management

# 数据库用户名（通常是root）
VITE_DB_USER=root

# 数据库密码
VITE_DB_PASSWORD=yyr0218...

# 应用配置
VITE_API_BASE_URL=http://localhost:8001/api

# SMTP邮件配置（用于邮箱验证和密码重置）
# 如果使用Gmail
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_SECURE=false
VITE_SMTP_USER=your_email@gmail.com
VITE_SMTP_PASS=your_app_password

# 如果使用QQ邮箱
# VITE_SMTP_HOST=smtp.qq.com
# VITE_SMTP_PORT=587
# VITE_SMTP_SECURE=false
# VITE_SMTP_USER=your_qq@qq.com
# VITE_SMTP_PASS=your_qq_smtp_password

# 如果使用163邮箱
# VITE_SMTP_HOST=smtp.163.com
# VITE_SMTP_PORT=465
# VITE_SMTP_SECURE=true
# VITE_SMTP_USER=your_email@163.com
# VITE_SMTP_PASS=your_163_smtp_password

# 邮件发送配置
VITE_EMAIL_FROM=your_email@example.com
VITE_EMAIL_FROM_NAME=网络管理平台

# AI服务配置（所有AI调用都在后端完成）
VITE_AI_API_BASE_URL=http://localhost:8000/api